{
  "name": "direct_print_js",
  "version": "1.0.0",
  "bin": "./src/index.js",
  "main": "./src/index.js",
  "engines": {
    "node": ">=20.0.0"
  },
  "description": "Direct Print Server - Thermal Printer Service for Windows, Mac, and Linux",
  "keywords": [
    "thermal-printer",
    "escpos",
    "pos-printer",
    "receipt-printer",
    "print-server"
  ],
  "scripts": {
    "start": "node ./src/index.js",
    "dev": "node --watch ./src/index.js",
    "build-win": "pkg . --targets node20-win-x64 --output ./dist/direct-print-win.exe",
    "build-mac": "pkg . --targets node20-macos-x64 --output ./dist/direct-print-macos",
    "build-linux": "pkg . --targets node20-linux-x64 --output ./dist/direct-print-linux",
    "build-all": "npm run build-win && npm run build-mac && npm run build-linux",
    "build-complete": "build-complete.bat",
    "install-service": "node scripts/install-service.js",
    "uninstall-service": "node scripts/uninstall-service.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "pkg": {
    "scripts": "./src/index.js",
    "outputPath": "./dist",
    "assets": [
      "public/**/*",
      "src/**/*"
    ],
    "targets": [
      "node20-mac-x64",
      "node20-win-x64",
      "node20-linux-x64"
    ]
  },
  "author": "aiqbalsyah",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/aiqbalsyah/direct-print-utils-pos.git"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "escpos": "^3.0.0-alpha.6",
    "escpos-usb": "^3.0.0-alpha.4",
    "express": "^4.21.2",
    "socket.io": "^4.8.1",
    "usb": "^2.14.0"
  },
  "devDependencies": {
    "pkg": "^5.8.1"
  }
}
